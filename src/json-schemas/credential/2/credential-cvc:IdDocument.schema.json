{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://identity.com/schemas/credential-cvc:IdDocument-v2",
  "title": "credential-cvc:IdDocument-v2",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "issuer": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "expirationDate": {
      "type": [
        "null",
        "string"
      ]
    },
    "version": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "transient": {
      "type": "boolean"
    },
    "claim": {
      "type": "object",
      "properties": {
        "document": {
          "type": "object",
          "properties": {
            "type": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.type-v1"
            },
            "number": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.number-v1"
            },
            "name": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.name-v1"
            },
            "gender": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.gender-v1"
            },
            "issueCountry": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.issueCountry-v1"
            },
            "placeOfBirth": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.placeOfBirth-v1"
            },
            "dateOfBirth": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.dateOfBirth-v1"
            },
            "dateOfExpiry": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.dateOfExpiry-v1"
            },
            "nationality": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.nationality-v1"
            },
            "evidences": {
              "$ref": "http://identity.com/schemas/claim-cvc:Document.evidences-v1"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["type", "name", "dateOfBirth", "issueCountry", "evidences"],
      "additionalProperties": false
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "merkleRoot": {
          "type": "string"
        },
        "anchor": {
          "type": "object",
          "properties": {
            "subject": {
              "type": "object",
              "properties": {
                "pub": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "data": {
                  "type": "string"
                },
                "signature": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "walletId": {
              "type": "string"
            },
            "cosigners": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "authority": {
              "type": "object",
              "properties": {
                "pub": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "coin": {
              "type": "string"
            },
            "tx": {
              "type": "string"
            },
            "network": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "civicAsPrimary": {
              "type": "boolean"
            },
            "schema": {
              "type": "string"
            },
            "value": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "leaves": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "additionalProperties": false
    },
    "granted": {
      "type": [
        "null",
        "string"
      ]
    }
  },
  "additionalProperties": false
}
