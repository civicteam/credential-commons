{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "cvc:Vaccination:record",
  "$id": "http://identity.com/schemas/cvc:Vaccination:record",
  "type": "object",
  "properties": {
    "vaccinationId": {
      "type": "string",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Vaccination:id"
        }
      ]
    },
    "dateOfAdministration": {
      "type": "string",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Vaccination:date"
        }
      ]
    },
    "manufacturer": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Vaccination:manufacturer"
        }
      ]
    },
    "name": {
      "type": "string",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Vaccination:name"
        }
      ]
    },
    "detail": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Vaccination:recordDetail"
        }
      ]
    },
    "organization": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://identity.com/schemas/cvc:Type:organization"
        }
      ]
    },
    "codes": {
      "type": "array",
      "items": {
        "$ref": "http://identity.com/schemas/cvc:Medical:codes"
      }
    }
  },
  "required": [
    "vaccinationId",
    "dateOfAdministration",
    "name",
    "organization"
  ],
  "additionalProperties": false,
  "credentialItem": true
}