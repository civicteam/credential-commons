{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://identity.com/schemas/credential-alt:Identity-v2",
  "title": "credential-alt:Identity-v2",
  "type": "object",
  "allOf": [
    {"$ref": "http://identity.com/schemas/type-meta:Credential-v1#/definitions/credential"},
    {
      "properties": {
        "claim": {
          "type": "object",
          "required": ["name", "address", "dateOfBirth"],
          "additionalProperties": false,
          "properties": {
            "name": {
              "$ref": "http://identity.com/schemas/claim-cvc:Identity.name-v1"
            },
            "address": {
              "$ref": "http://identity.com/schemas/claim-cvc:Identity.address-v1"
            },
            "dateOfBirth": {
              "$ref": "http://identity.com/schemas/claim-cvc:Identity.dateOfBirth-v1"
            }
          }
        }
      }
    }
  ]
}
