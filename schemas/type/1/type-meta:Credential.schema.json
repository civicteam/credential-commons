{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://identity.com/schemas/type-meta:Credential-v1",
  "title": "type-meta:Credential-v1",
  "type": "object",
  "definitions": {
    "credential": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "issuer": {
          "type": "string"
        },
        "issuanceDate": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "transient": {
          "type": "boolean"
        },
        "proof": { "$ref": "http://identity.com/schemas/type-meta:Proof-v1" }
      }
    }
  }
}
